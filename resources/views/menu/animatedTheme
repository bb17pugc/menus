<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

$(function()
{
    $('.images-overlays i').slideDown();
})

 counter = 0;

 $(document).ready(
   function()
   {

    var divClone = $(".images").clone();

    var intervalId = window.setInterval(function(){
    $(".images").children().eq(counter).animate({width: '-10px' , height: '-10px' }  , 1000 );
    // $(".images").append($(".images").children().eq(counter).animate({width: '100px'}));

    counter++;
    if(counter > 2)
    {
      $(".images").replaceWith(divClone.clone());
      counter=0;
    }

}, 5000);
   }
 );

</script>
